<Window x:Class="MagicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Start Work" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartWork_Click"></Button>
        <Button Content="Start Work1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartWork1_Click"></Button>
        <Button Content="Start Work2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartWork2_Click"></Button>
        <Button Content="Start Work3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartWork3_Click"></Button>
        <Button Content="Start Work sequentially" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartWorkSequential_Click"></Button>
        <Button Content="Start Work sequentially" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartWorkSequential2_Click"></Button>
    </StackPanel>
</Window>
